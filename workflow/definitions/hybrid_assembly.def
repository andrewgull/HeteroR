Bootstrap: docker
From: ubuntu:22.04

%help 
   Unicycler + Flye-Medaka-Polypolish container with miniconda

%post
    apt update && apt -y upgrade
    apt -y install \
    build-essential \
    wget \
    bzip2 \
    ca-certificates \
    libglib2.0-0 \
    libxext6 \
    libsm6 \
    libxrender1 \
    git
    rm -rf /var/lib/apt/lists/*
    apt clean
    
    #Installing Miniconda
    wget -c https://repo.anaconda.com/miniconda/Miniconda3-py39_23.1.0-1-Linux-x86_64.sh
    /bin/bash Miniconda3-py39_23.1.0-1-Linux-x86_64.sh -bfp /usr/local
    
    # Custom conda packages
    conda install flye=2.9.1 \
    medaka=1.6.0 \
    polypolish=0.5.0 \
    unicycler=0.4.8 \
    bwa=0.7.17 \
    seqkit=2.2.0 \
    -c bioconda
    
    # To free some space:
    conda clean --tarballs --yes