Bootstrap: docker
From: ubuntu:22.04

%help 
   fastp container with miniconda

%post
    apt update && apt -y upgrade
    apt -y install \
    build-essential \
    wget \
    bzip2 \
    ca-certificates \
    libglib2.0-0 \
    libxext6 \
    libsm6 \
    libxrender1 \
    git
    rm -rf /var/lib/apt/lists/*
    apt clean
    
    #Installing Miniconda
    wget -c https://repo.anaconda.com/miniconda/Miniconda3-py39_23.1.0-1-Linux-x86_64.sh
    /bin/bash Miniconda3-py39_23.1.0-1-Linux-x86_64.sh -bfp /usr/local
    
    # Custom conda packages
    conda install fastp=0.20.1 -c bioconda
    
    # To free some space:
    conda clean --tarballs --yes