Bootstrap: docker
From: ubuntu:22.04

%help 
   RScripts container with miniconda

%post
    apt update && apt -y upgrade
    apt -y install \
    build-essential \
    wget \
    bzip2 \
    ca-certificates \
    libglib2.0-0 \
    libxext6 \
    libsm6 \
    libxrender1 \
    git
    rm -rf /var/lib/apt/lists/*
    apt clean
    
    #Installing Miniconda
    wget -c https://repo.anaconda.com/miniconda/Miniconda3-py39_23.1.0-1-Linux-x86_64.sh
    /bin/bash Miniconda3-py39_23.1.0-1-Linux-x86_64.sh -bfp /usr/local
    
    # Custom conda packages
    conda install \
    r-ggplot2=3.4.4 \
    r-stringr=1.5.1 \
    r-dplyr=1.1.4 \
    r-optparse=1.7.1 \
    r-data.table=1.14.8 \
    r-ggpubr=0.6.0 \
    r-r.utils=2.12.3 \
    r-purrr=1.0.2 \
    -c bioconda \
    -c conda-forge
    
    # To free some space:
    conda clean --tarballs --yes